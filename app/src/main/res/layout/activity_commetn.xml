<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_pixiv"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_scrollFlags="scroll|enterAlways"
        android:elevation="@dimen/eight_dip"
        app:navigationIcon="@drawable/ic_arrow_back_black_two_24dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="评论详情"
        app:titleTextColor="#fff" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_comment"
        android:layout_width="match_parent"
        android:layout_above="@+id/card_fourth"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_pixiv">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/card_fourth"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:background="@color/white"
        android:focusableInTouchMode="true"
        android:padding="6dp">

        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/eight_dip"
            android:src="@drawable/ic_insert_comment_black_24dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:id="@+id/comment_edit"
            android:layout_marginStart="4dp"
            android:singleLine="true"
            android:layout_toStartOf="@+id/img_comment"
            android:hint="留下你的评论吧~"
            android:textSize="@dimen/sixteen_sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/clear_hint"
            android:layout_alignEnd="@+id/comment_edit"
            android:src="@drawable/ic_clear_black_24dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/try_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>